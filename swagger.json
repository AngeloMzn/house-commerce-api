{
  "openapi": "3.1.0",
  "info": {
    "title": "HouseCommerce API",
    "description": "API para gerenciamento de autenticação e produtos.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://virtserver.swaggerhub.com/ADRIANODUTRA/HouseCommerce/1.0.0",
      "description": "SwaggerHub API Auto Mocking"
    },
    {
      "url": "http://localhost:3000/api",
      "description": "Servidor local de desenvolvimento"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Rotas para autenticação"
    },
    {
      "name": "Products",
      "description": "Rotas para gerenciamento de produtos"
    }
  ],
  "paths": {
    "/signup": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Criação de um novo usuário",
        "description": "Registra um novo usuário no sistema",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/signup_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Usuário registrado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login de usuário",
        "description": "Faz o login do usuário no sistema",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/login_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/product/create": {
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Criação de um novo produto",
        "description": "Cria um produto no sistema",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product_create_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Produto criado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Listagem de produtos",
        "description": "Retorna uma lista de todos os produtos",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de produtos retornada com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/product/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Buscar produto por ID",
        "description": "Retorna os detalhes de um produto específico",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produto encontrado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Atualizar produto por ID",
        "description": "Atualiza os detalhes de um produto existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/product_id_body"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Deletar produto por ID",
        "description": "Remove um produto do sistema",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "authorization",
            "in": "header",
            "description": "Token de autorização",
            "required": false,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produto deletado com sucesso"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "signup_body": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "usuario@exemplo.com"
          },
          "password": {
            "type": "string",
            "example": "senha123"
          }
        }
      },
      "login_body": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "usuario@exemplo.com"
          },
          "password": {
            "type": "string",
            "example": "senha123"
          }
        }
      },
      "product_create_body": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Produto A"
          },
          "price": {
            "type": "number",
            "example": 29.99
          },
          "type": {
            "type": "string",
            "example": "eletrônico"
          }
        }
      },
      "product_id_body": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "example": "Produto atualizado"
          },
          "price": {
            "type": "number",
            "example": 49.99
          },
          "type": {
            "type": "string",
            "example": "novo"
          }
        }
      }
    }
  }
}